<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/img_news"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/hacker"
        android:background="@drawable/rounded_border"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/img_news"
        app:layout_constraintTop_toTopOf="@+id/img_news"
        app:layout_constraintBottom_toBottomOf="@+id/img_news"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/title_main_news"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:text="Amerika Waspada Gegara Hacker Berkeliaran di Jaringan Telekomunikasi"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"/>
            <ImageView
                android:id="@+id/trash"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/trash"
                android:layout_marginStart="8dp"
                android:layout_gravity="center"/>
             <ImageView
                 android:id="@+id/edit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/edit"
                android:layout_marginStart="16dp"
                android:layout_gravity="center"/>
        </LinearLayout>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8 jam"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            android:textSize="10sp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>