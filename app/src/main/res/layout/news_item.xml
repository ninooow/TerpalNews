<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="16dp">
    <ImageView
        android:id="@+id/img_news"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@drawable/hacker"
        android:background="@drawable/rounded_border"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/img_news"
        app:layout_constraintTop_toTopOf="@+id/img_news"
        app:layout_constraintBottom_toBottomOf="@+id/img_news"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/title_main_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amerika Waspada Gegara Hacker Berkeliaran di Jaringan Telekomunikasi"
            android:fontFamily="@font/poppins_bold"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/from_terpal_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terpal News"
                android:textColor="@color/red"
                android:textSize="10sp"
                android:fontFamily="@font/poppins_regular"/>
            <TextView
                android:id="@+id/when"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8 jam"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>