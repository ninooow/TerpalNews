<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="48dp"
    tools:context=".ui.RegisterActivity">
    <androidx.emoji2.widget.EmojiTextView
        android:id="@+id/txt_hey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:fontFamily="@font/poppins_bold"
        android:text="Get Started ! ðŸ˜ŠðŸ™Œ"/>
    <TextView
        android:id="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_regular"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/input_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingHorizontal="16dp"
        android:elevation="4dp"
        android:translationZ="2dp"
        android:singleLine="true"
        android:background="@drawable/rectangle_light_gray"/>
    <TextView
        android:id="@+id/txt_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_regular"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/input_usn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingHorizontal="16dp"
        android:elevation="4dp"
        android:translationZ="2dp"
        android:singleLine="true"
        android:background="@drawable/rectangle_light_gray"/>
    <TextView
        android:id="@+id/txt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_regular"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/input_email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingHorizontal="16dp"
        android:elevation="4dp"
        android:translationZ="2dp"
        android:singleLine="true"
        android:background="@drawable/rectangle_light_gray"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_regular"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/input_psw"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="textPassword"
        android:paddingHorizontal="16dp"
        android:elevation="4dp"
        android:translationZ="2dp"
        android:singleLine="true"
        android:background="@drawable/rectangle_light_gray"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_dark_blue"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:textAllCaps="false"
        android:layout_marginTop="48dp"
        android:text="Register"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp"
        android:gravity="center">
        <TextView
            android:id="@+id/txt_to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12dp"
            android:text="Already Have an Account?" />
        <TextView
            android:id="@+id/to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/poppins_bold"
            android:textSize="12dp"
            android:textColor="@color/light_blue"
            android:text="Log in"/>

    </LinearLayout>
</LinearLayout>