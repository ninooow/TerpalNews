<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="48dp"
    tools:context=".ui.LoginActivity">
    <androidx.emoji2.widget.EmojiTextView
        android:id="@+id/txt_hey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:fontFamily="@font/poppins_bold"
        android:text="Hey 🖐"/>
    <TextView
        android:id="@+id/txt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:layout_marginTop="-10dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Login Now !"/>
    <TextView
        android:id="@+id/txt_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_regular"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/input_usn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingHorizontal="16dp"
        android:elevation="4dp"
        android:translationZ="2dp"
        android:singleLine="true"
        android:background="@drawable/rectangle_light_gray"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins_regular"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/input_psw"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="textPassword"
        android:paddingHorizontal="16dp"
        android:elevation="4dp"
        android:translationZ="2dp"
        android:singleLine="true"
        android:background="@drawable/rectangle_light_gray"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login_public"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_dark_blue"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:textAllCaps="false"
        android:layout_marginTop="96dp"
        android:text="Log In"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_white"
        android:textColor="@color/dark_blue"
        android:fontFamily="@font/poppins_bold"
        android:textAllCaps="false"
        android:layout_marginTop="8dp"
        android:text="Log In as Admin"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp"
        android:gravity="center">
        <TextView
            android:id="@+id/txt_to_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12dp"
            android:text="New Member?" />
        <TextView
            android:id="@+id/to_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/poppins_bold"
            android:textSize="12dp"
            android:textColor="@color/light_blue"
            android:text="Register"/>

    </LinearLayout>


</LinearLayout>